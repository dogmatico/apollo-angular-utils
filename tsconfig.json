{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "baseUrl": "src" // This must be specified if "paths" is.
  },
  "compileOnSave": true
}
