  "homepage": "https://github.com/dogmatico/apollo-angular-utils#readme",
  "dependencies": {
    "apollo-client": "^2.3.0",
    "rxjs": "^6.0.0"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "@types/jasminewd2": "^2.0.3",
    "apollo-cache-inmemory": "^1.2.0",
    "apollo-link": "^1.2.2",
    "codelyzer": "^4.3.0",
